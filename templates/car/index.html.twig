{% extends 'base.html.twig' %}

{% block title %}GoWheels
{% endblock %}
{% block body %}
	<div class="container-fluid d-flex flex-column align-items-center" id="home-banner">
		<h2>Bienvenue à bord</h2>
		<p>Location de voiture 24h/24 7j/7</p>
		<a href="{{ path("vehicules") }}" class="btn btn-secondary mt-2">
			Découvrir nos véhicules</a>
	</div>

	<section id="veh">
		<h2 class="text-center my-5">Découvrez la flotte de véhicule chez GOWHEELS</h2>
		<div class="container">
			<div class="row row-cols-1 row-cols-md-4 g-6">
				{% for vehicule in vehicules|sort((a, b) => b.prixJournalier - a.prixJournalier)|slice(0, 4) %}
					<div class="col mb-5">
						<div class="card h-100 border-0 shadow-none">
							<a href="{{ path("vehicules_details", {id: vehicule.id}) }}">
								<img src="{{ asset('asset/uploads/' ~ vehicule.photo) }}" class="card-img-top rounded-0 mb-3 img-fluid imgF" alt="...">
							</a>
							<h3 class="card-title m-0">{{ vehicule.titre }}</h3>
							<div class="card-body d-flex flex-column p-0">
								<small class="text-body-secondary mt-auto">À partir de
									{{ vehicule.prixJournalier }}€ / jour</small>
							</div>
							<div class="card-footer d-flex border-0 shadow-none bg-white px-0">
								<a href="{{ path("vehicules_details", {id: vehicule.id}) }}" class="btn btn-primary btn-sm rounded-0">Voir la disponibilité</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>

{% endblock %}
