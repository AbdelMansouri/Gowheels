{% extends 'base.html.twig' %}

{% block title %}Go-Wheels - Créer un compte
{% endblock %}

{% block body %}
	{% if app.user %}
		<div class="d-flex flex-column mb-3 justify-content-center align-items-center min-vh">
			<p>Vous êtes identifié en tant que
				{{ app.user.userIdentifier }}</p>
			<div class="">
				<a href="{{ path('accueil') }}" class="btn btn-primary">
					Accueil</a>
				<a href="{{ path('app_logout') }}" class="btn btn-danger">Deconnexion</a>
			</div>
		</div>
	{% else %}
		<div class="col-md-4 mx-auto my-5">
			<h1 class="mb-5">Créer un compte</h1>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.civilite) }}
			{{ form_row(registrationForm.prenom) }}
			{{ form_row(registrationForm.nom) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

			<button type="submit" class="btn btn-primary my-4">Créer un compte</button>
		</div>
		{{ form_end(registrationForm) }}
	{% endif %}
{% endblock %}
