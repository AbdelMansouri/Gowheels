{% extends "base.html.twig" %}

{% block title %}
	Modifier une commande
{% endblock %}

{% block body %}
	<h1 class="text-center my-4">Modifier une commande</h1>
	<div class="container">
		<div class="col-md-8 mx-auto">

			{{ form_start(form) }}

			<div class="form-group mb-2">
				<fieldset disabled="">
					<label class="form-label" for="disabledInput">Numéro de commande</label>
					<input class="form-control" id="disabledInput" type="text" placeholder="{{ commande.id }}" disabled="" wtx-context="AEBFBA1C-A2A2-4791-88A9-5CD22C948E25">
				</fieldset>
			</div>

			<div class="form-group mb-2">
				<fieldset disabled="">
					<label class="form-label" for="disabledInput">Prénom</label>
					<input class="form-control" id="disabledInput" type="text" placeholder="{{ commande.membre.prenom }}" disabled="" wtx-context="AEBFBA1C-A2A2-4791-88A9-5CD22C948E25">
				</fieldset>
			</div>

			<div class="form-group mb-2">
				<fieldset disabled="">
					<label class="form-label" for="disabledInput">Nom</label>
					<input class="form-control" id="disabledInput" type="text" placeholder="{{ commande.membre.nom }}" disabled="" wtx-context="AEBFBA1C-A2A2-4791-88A9-5CD22C948E25">
				</fieldset>
			</div>

			{{ form_row(form.date_heure_depart) }}

			{{ form_row(form.date_heure_fin) }}

			<div class="form-group mt-2 mb-5">
				<fieldset disabled="">
					<label class="form-label" for="disabledInput">Tarif total</label>
					<input class="form-control" id="disabledInput" type="text" placeholder="{{ commande.prixTotal }} €" disabled="" wtx-context="AEBFBA1C-A2A2-4791-88A9-5CD22C948E25">
				</fieldset>
			</div>

			<button type="submit" class="btn btn-primary">Envoyer</button>
			<a href="{{ path('admin_gestion_commandes')}}" class="btn btn-danger">Retour</a>


			{{ form_end(form) }}

		</div>
	</div>
{% endblock %}
